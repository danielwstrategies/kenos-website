# Increase timeouts for slow/unstable connections
fetch-timeout=600000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Disable progress to reduce output noise in CI
progress=false

# Use legacy peer deps to avoid hanging on resolution
legacy-peer-deps=true

# Set max sockets to prevent connection pooling issues
maxsockets=1
